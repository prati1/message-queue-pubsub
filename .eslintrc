{
  "globals": {
    "__": "readonly",
    "validationSuccess": "readonly",
    "validationErrorPlacement": "readonly",
    "showAlert": "readonly",
    "showLoader": "readonly",
    "hideLoader": "readonly"
  },
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "semi": true,
        "printWidth": 80
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none",
        "argsIgnorePattern": "res|next|^err"
      }
    ],
    "no-console": "off",
    "no-use-before-define": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["__", "__n"]
      }
    ],
    "quotes": [
      "error",
      "backtick",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": false
      }
    ],
    "no-shadow": [
      "error",
      { "allow": ["err", "resolve", "reject", "done", "callback", "cb"] }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": "node_modules"
      }
    }
  },
  "plugins": ["prettier"]
}
